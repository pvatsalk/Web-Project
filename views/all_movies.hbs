<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movies List</title>
    <style>
        body{
          background-blend-mode: darken;
        }
  
        h1 {
            text-align: center;
            padding: 20px;
        }

        .movies-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            gap: 20px;
            padding: 20px;
            color: white;
        }

        .movie {
            height: 300px;
            width: 300px;
            background-color: #1f0505eb;
            border-radius: 8px;
            overflow: hidden;
            margin: 10px;
        }

        .movie img {
            width: 100%;
            height: 70%;
            border-radius: 8px 8px 0 0;
        }

        .movie h2 {
     height: 20%;
            padding: 10px;
             word-wrap: break-word;
            margin: 0;
            font-size: 1.2em;
        }

        .movie p {
            padding: 10px;
            margin: 0;
            font-size: 0.9;
        }
    </style>
</head>
<body>
    <h1>Movies List</h1>
    <div class="movies-container" >
        {{#each movies}}
            <div class="movie">
                <img src="{{this.poster}}" onerror="this.src='/images/bgf.jpg';">
                <h2>{{this.title}}</h2>
              
               
            </div>
        {{/each}}
    </div>

  
    <script>
    document.addEventListener('DOMContentLoaded', function () {
      const starRatingElements = document.querySelectorAll('.star-rating');

      starRatingElements.forEach(function (starRatingElement) {
        const rating = parseFloat(starRatingElement.getAttribute('data-rating'));
        const integerPart = Math.floor(rating);
        const fractionPart = rating - integerPart;

        // Add class to highlight filled stars
        starRatingElement.classList.add(`star-${integerPart}`);

        // If the rating has a fraction, add a class to highlight a half-filled star
        if (fractionPart === 0.5) {
          starRatingElement.classList.add('star-half');
        }
      });
    });
  </script>
</body>
</html>
