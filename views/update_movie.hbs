<div class="container mt-5">
  <div class="translucent_box">
    <h2>Update Movie</h2>

    <!-- New Movie Form -->
    <form action="/api/add_movie" method="POST" class="mt-3">
      <!-- Title -->

        <div class="mb-3">
         id : {{id}}
          </div>



      <div class="mb-3">
        <label for="title" class="form-label">Title:</label>
        <input type="text" class="form-control" id="title" name="title" required>
      </div>

      <!-- Plot -->
      <div class="mb-3">
        <label for="plot" class="form-label">Plot:</label>
        <textarea class="form-control" id="plot" name="plot" rows="3" required></textarea>
      </div>

      <!-- Genres -->
      <div class="mb-3">
        <label for="genres" class="form-label">Genres:</label>
        <input type="text" class="form-control" id="genres" name="genres" required>
      </div>

      <!-- Runtime -->
      <div class="mb-3">
        <label for="runtime" class="form-label">Runtime (minutes):</label>
        <input type="number" class="form-control" id="runtime" name="runtime" required>
      </div>

      <!-- Rated -->
      <div class="mb-3">
        <label for="rated" class="form-label">Rated:</label>
        <input type="text" class="form-control" id="rated" name="rated" required>
      </div>

      <!-- Cast -->
      <div class="mb-3">
        <label for="cast" class="form-label">Cast (comma-separated):</label>
        <input type="text" class="form-control" id="cast" name="cast" required>
      </div>

      <!-- Full Plot -->
      <div class="mb-3">
        <label for="fullplot" class="form-label">Full Plot:</label>
        <textarea class="form-control" id="fullplot" name="fullplot" rows="5" required></textarea>
      </div>

      <!-- Languages -->
      <div class="mb-3">
        <label for="languages" class="form-label">Languages (comma-separated):</label>
        <input type="text" class="form-control" id="languages" name="languages" required>
      </div>

      <!-- Released -->
      <div class="mb-3">
        <label for="released" class="form-label">Released Date:</label>
        <input type="date" class="form-control" id="released" name="released" required>
      </div>

      <!-- Directors -->
      <div class="mb-3">
        <label for="directors" class="form-label">Directors (comma-separated):</label>
        <input type="text" class="form-control" id="directors" name="directors" required>
      </div>

      <!-- Writers -->
      <div class="mb-3">
        <label for="writers" class="form-label">Writers (comma-separated):</label>
        <input type="text" class="form-control" id="writers" name="writers" required>
      </div>

      <!-- Awards -->
      <div class="mb-3">
        <label for="awards" class="form-label">Awards:</label>
        <input type="text" class="form-control" id="awards" name="awards" required>
      </div>

      <!-- Year -->
      <div class="mb-3">
        <label for="year" class="form-label">Year:</label>
                <input type="text" class="form-control" id="year" name="year" required>

      </div>

      <!-- IMDB -->
      <div class="mb-3">
        <label for="imdb" class="form-label">IMDB Rating:</label>
        <input type="number" class="form-control" id="imdb" name="imdb" step="0.1" required>
      </div>

      <!-- Countries -->
      <div class="mb-3">
        <label for="countries" class="form-label">Countries (comma-separated):</label>
        <input type="text" class="form-control" id="countries" name="countries" required>
      </div>

      <!-- Type -->
      <div class="mb-3">
        <label for="type" class="form-label">Type:</label>
        <input type="text" class="form-control" id="type" name="type" required>
      </div>

      <!-- Tomatoes -->
      <div class="mb-3">
        <label for="tomatoes" class="form-label">Tomatoes Viewer Rating:</label>
        <input type="number" class="form-control" id="tomatoes" name="tomatoes" step="0.1" required>
      </div>

      <!-- DVD -->
      <div class="mb-3">
        <label for="dvd" class="form-label">DVD Release Date:</label>
        <input type="date" class="form-control" id="dvd" name="dvd" required>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-outline-warning">Update Movie</button>
    </form>
    <!-- End New Movie Form -->
  </div>
  </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
